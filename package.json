{
  "name": "bmad-github-native-full-cycle",
  "version": "2.0.1",
  "description": "Enhanced BMAD Framework - Breakthrough Method for Agile AI-Driven Development with Advanced Features",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "bmad:workflow": "node scripts/bmad/bmad-workflow-enhanced.js",
    "bmad:workflow:original": "node scripts/bmad/bmad-workflow.js",
    "bmad:workflow:single": "node scripts/bmad/bmad-workflow-enhanced.js",
    "bmad:docs": "node scripts/bmad/agent-doc-enhanced.js",
    "bmad:docs:original": "node scripts/bmad/agent-doc.js",
    "bmad:gatekeeper": "node scripts/bmad/bmad-gatekeeper.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ scripts/ personas/",
    "lint:fix": "eslint src/ scripts/ personas/ --fix",
    "format": "prettier --write src/ scripts/ personas/",
    "validate": "npm run lint && npm run test",
    "build": "npm run validate",
    "dev": "npm run bmad:docs && npm run start",
    "release": "npm run build && npm run test:coverage",
    "clean": "rm -rf .github/logs/ .github/reports/ .github/metrics/ node_modules/.cache/",
    "setup": "npm install && chmod +x scripts/bmad/*.js && chmod +x scripts/*.js",
    "setup:enhanced": "node bin/setup-enhanced.js",
    "status": "node -e \"console.log('Enhanced BMAD Framework v2.0.0 - Ready for autonomous development!')\"",
    "bmad:search": "node scripts/search-memory.js"
  },
  "keywords": [
    "bmad",
    "enhanced",
    "ai-driven",
    "autonomous",
    "development",
    "github",
    "workflow",
    "automation",
    "cicd",
    "devops",
    "quality-assurance"
  ],
  "author": "helton-godoy",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.1.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@eslint/js": "^8.57.1",
    "babel-jest": "^29.7.0",
    "cors": "^2.8.5",
    "eslint": "^8.55.0",
    "express-validator": "^7.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4",
    "winston": "^3.11.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "bin": {
    "bmad-init": "./bin/setup.js",
    "bmad-init-enhanced": "./bin/setup-enhanced.js"
  },
  "files": [
    "bin",
    "agent-core",
    "scripts",
    "personas"
  ],
  "bmad": {
    "version": "2.0.0",
    "features": [
      "enhanced-personas",
      "advanced-workflow",
      "comprehensive-documentation",
      "quality-metrics",
      "error-handling",
      "performance-monitoring"
    ],
    "personas": [
      "project-manager",
      "architect",
      "developer-enhanced",
      "qa",
      "security",
      "devops",
      "release-manager"
    ],
    "workflows": {
      "full-cycle": "scripts/bmad/bmad-workflow-enhanced.js",
      "single-persona": "scripts/bmad/bmad-workflow-enhanced.js [persona]",
      "documentation": "scripts/bmad/agent-doc-enhanced.js"
    },
    "documentation": {
      "auto-generate": true,
      "semantic-analysis": true,
      "output-dir": "docs/architecture",
      "formats": [
        "markdown",
        "json"
      ]
    },
    "quality": {
      "test-coverage": ">=80%",
      "eslint-rules": "recommended",
      "performance-threshold": "200ms"
    }
  }
}