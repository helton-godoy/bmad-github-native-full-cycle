# Enhanced BMAD Framework v2.0.0 Environment Configuration

# GitHub Configuration (Required)
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repository_name

# Enhanced BMAD Configuration
BMAD_ENHANCED_MODE=true
BMAD_QUALITY_GATES=true
BMAD_PERFORMANCE_MONITORING=true
BMAD_ADVANCED_LOGGING=true

# BMAD Critical Fixes Configuration
BMAD_ERROR_RECOVERY_ENABLED=true
BMAD_STATE_PERSISTENCE_ENABLED=true
BMAD_LOOP_DETECTION_ENABLED=true
BMAD_ENHANCED_GATEKEEPER_ENABLED=true

# Error Recovery Configuration
BMAD_MAX_RETRIES=3
BMAD_MAX_RECOVERY_ATTEMPTS=2
BMAD_RECOVERY_PERSONA_ENABLED=true
BMAD_EXPONENTIAL_BACKOFF_INITIAL_DELAY=1000
BMAD_EXPONENTIAL_BACKOFF_MAX_DELAY=30000
BMAD_EXPONENTIAL_BACKOFF_MULTIPLIER=2

# State Management Configuration
BMAD_STATE_CACHE_ENABLED=true
BMAD_STATE_FILE=workflow-state.json
BMAD_STATE_BACKUP_FILE=workflow-state.backup.json
BMAD_STATE_LOCK_TIMEOUT=30000
BMAD_STATE_MAX_SIZE=10485760

# Loop Detection Configuration
BMAD_LOOP_DETECTION_MAX_TRANSITIONS=3
BMAD_LOOP_DETECTION_TIME_WINDOW=3600000
BMAD_LOOP_DETECTION_HISTORY_FILE=transition-history.json

# Gatekeeper Configuration
BMAD_DEV_MODE=false
BMAD_ENABLE_BYPASS=false
BMAD_SKIP_TESTS=false
BMAD_SKIP_VALIDATION=false
BMAD_REQUIRE_CONTEXT_UPDATE=true

# Commit Handler Configuration
BMAD_COMMIT_VALIDATION_ENABLED=true
BMAD_COMMIT_STAGING_VALIDATION=true
BMAD_COMMIT_FORMAT_VALIDATION=true
BMAD_COMMIT_ROLLBACK_ENABLED=true

# Documentation Configuration
BMAD_DOCS_AUTO_GENERATE=true
BMAD_DOCS_SEMANTIC_ANALYSIS=true
BMAD_DOCS_OUTPUT_DIR=docs/architecture

# Quality Configuration
BMAD_TEST_COVERAGE_THRESHOLD=80
BMAD_ESLINT_RULES=recommended
BMAD_PERFORMANCE_THRESHOLD=200

# Security Configuration
BMAD_SECURITY_SCAN_ENABLED=true
BMAD_SECURITY_COMPLIANCE=true
BMAD_VULNERABILITY_DETECTION=true

# Performance Configuration
BMAD_PERFORMANCE_TRACKING=true
BMAD_RESOURCE_MONITORING=true
BMAD_EXECUTION_OPTIMIZATION=true

# Development Configuration
NODE_ENV=development
DEBUG=bmad:*
LOG_LEVEL=info

# Testing Configuration
JEST_COVERAGE_THRESHOLD=80
JEST_VERBOSE=true
JEST_BAIL=false

# Build Configuration
BUILD_CLEAN=true
BUILD_VALIDATE=true
BUILD_TEST=true
