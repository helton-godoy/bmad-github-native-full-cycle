PORT=3000
NODE_ENV=development

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=helton-godoy
GITHUB_REPO=bmad-github-native-full-cycle
GITHUB_BRANCH=main

# JWT Configuration
JWT_SECRET=bmad-github-native-full-cycle-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Bcrypt Configuration
BCRYPT_ROUNDS=10

# BMAD Configuration
BMAD_REQUIRE_CONTEXT_UPDATE=true
BMAD_COMMIT_PREFIX=BMAD
BMAD_AUTO_TESTING=true

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_METRICS=true
